<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model">
    <class name="com.hust.hibernate.model.Student" table="student" dynamic-update="true">
        <id name="id">
            <generator class="native"/>
        </id>
        <property name="name"/>
        <property name="age"/>
        <one-to-one name="stuIdCard" class="com.hust.hibernate.model.StuIdCard" property-ref="student"/>
    </class>
</hibernate-mapping>